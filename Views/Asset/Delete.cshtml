@model InvestmentPortfolioManagement.Models.Asset
@{
    ViewData["Title"] = "Delete Asset";
}

<div class="container mt-5">
    <h2>Confirm Delete</h2>

    <div class="alert alert-danger">Are you sure you want to delete this asset?</div>

    <dl class="row">
        <dt class="col-sm-3">Asset</dt>
        <dd class="col-sm-9">@Model.AssetName</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.AssetType</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.PurchasePrice</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="AssetId" />
        <button type="submit" class="btn btn-danger d-grid d-md-inline mb-2 me-md-2">Delete</button>
        <a asp-action="Index" asp-route-portfolioId="@Model.PortfolioId" class="btn btn-secondary d-grid d-md-inline mb-2 me-md-2">Cancel</a>
    </form>
</div>
